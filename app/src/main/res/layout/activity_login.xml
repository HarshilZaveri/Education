<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebookSignin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="150dp"
        android:layout_row="3"
        android:fontFamily="sans-serif-condensed"
        android:padding="100dp"
        android:paddingBottom="11dp"
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:paddingTop="11dp"
        android:scaleX="0.98"
        android:scaleY="0.98"
        android:scrollHorizontally="false"
        android:text="Facebook"
        android:textAlignment="center"
        android:textStyle="normal"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:typeface="normal" />


    <Button
        android:id="@+id/googleSignin"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="10dp"
        android:layout_marginLeft="@android:dimen/notification_large_icon_height"
        android:layout_marginRight="@android:dimen/notification_large_icon_width"
        android:layout_row="2"
        android:background="@drawable/common_google_signin_btn_text_light_normal"
        android:fontFamily="sans-serif-condensed"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"

        android:shadowColor="@android:color/darker_gray"
        android:text="Continue with Google"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:typeface="normal"
        android:alpha="0"/>

</LinearLayout>